<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_pressed_solid"/>      <!-- Brighter on press -->
            <stroke android:width="1dp" android:color="@color/glass_pressed_stroke"/>
            <corners android:radius="999dp"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_hovered_solid"/>      <!-- Subtle hover -->
            <stroke android:width="1dp" android:color="@color/glass_hovered_stroke"/>
            <corners android:radius="999dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_focused_solid"/>      <!-- Focused state -->
            <stroke android:width="2dp" android:color="@color/glass_focused_stroke"/>
            <corners android:radius="999dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/glass_fill_color"/>      <!-- Base dark glass -->
            <stroke android:width="1dp" android:color="@color/glass_stroke_color"/>
            <corners android:radius="999dp"/>
        </shape>
    </item>
</selector>