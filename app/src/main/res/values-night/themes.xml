<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark mode automatically applied by system -->
    <style name="Base.Theme.CheermateApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Use dark theme colors when system is in dark mode -->
        <item name="android:fontFamily">@font/sf_pro_rounded_regular</item>
        
        <!-- Switch styling for dark mode -->
        <item name="colorControlActivated">#8B6FFF</item>
        <item name="colorSwitchThumbNormal">#666666</item>
        <item name="android:colorForeground">@android:color/white</item>
        
        <!-- Bottom sheet background -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>
</resources>