<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">

    <!-- Fixed Toolbar (Not Scrollable) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="350dp"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bg_card_glass"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:title="Task"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <!-- Overdue Status Badge -->
            <LinearLayout
                android:id="@+id/overdue_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_chip_glass"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/overdue_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â° Overdue by 12 days"
                    android:textColor="#FFED8936"
                    android:textStyle="bold"
                    android:fontFamily="@font/sf_pro_rounded_bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Task Details Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/task_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/overdue_row"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_card_glass">

                    <!-- Task Title label then field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task title"
                        android:textColor="@color/text_secondary_white_70"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_task_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Task title"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/text_secondary_white_70"
                        android:fontFamily="@font/sf_pro_rounded_bold"
                        android:textSize="20sp"
                        android:background="@android:color/transparent"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp" />

                    <!-- Task Description label then field -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Task description"
                        android:textColor="@color/text_secondary_white_70"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:textSize="14sp"
                        android:layout_marginTop="16dp" />

                    <EditText
                        android:id="@+id/et_task_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Task description"
                        android:textColor="@android:color/white"
                        android:textColorHint="@color/text_secondary_white_70"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        android:gravity="top"
                        android:minLines="2"
                        android:maxLines="3" />

                    <!-- Row: category, priority, due date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_task_category"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_chip_glass"
                            android:minWidth="0dp"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:text="Work"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btn_task_priority"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_chip_glass"
                            android:minWidth="0dp"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:text="Medium"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/btn_task_due_date"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginStart="12dp"
                            android:background="@drawable/bg_chip_glass"
                            android:minWidth="0dp"
                            android:paddingLeft="14dp"
                            android:paddingRight="14dp"
                            android:text="9/24/2025"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <!-- Reminder on its own row -->
                    <Button
                        android:id="@+id/btn_task_reminder"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_chip_glass"
                        android:enabled="false"
                        android:minWidth="0dp"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:text="Reminder"
                        android:textAllCaps="false"
                        android:textColor="@color/text_secondary_white_70"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Subtasks Section -->
            <androidx.cardview.widget.CardView
                android:id="@+id/subtask_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/task_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_card_glass">

                    <!-- Header row: title left, count right -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subtasks"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/sf_pro_rounded_bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tv_items_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 items"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary_white_70" />
                    </LinearLayout>

                    <!-- Placeholder input label like screenshot -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Subtask title"
                        android:textSize="16sp"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:textColor="@color/text_secondary_white_70" />

                    <!-- Empty state centered -->
                    <TextView
                        android:id="@+id/tv_no_subtasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:text="No subtasks yet"
                        android:textSize="14sp"
                        android:fontFamily="@font/sf_pro_rounded_regular"
                        android:textColor="@color/text_secondary_white_70" />

                    <!-- Runtime container (kept hidden initially) -->
                    <LinearLayout
                        android:id="@+id/subtasks_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
